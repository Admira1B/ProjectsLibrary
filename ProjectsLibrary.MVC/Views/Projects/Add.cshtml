@model ProjectsLibrary.MVC.Models.Project.AddProjectViewModel

@{
    ViewData["Title"] = "Adding project";
}

<div class="container col-12 py-1">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 header-container rounded-3">
        <div class="row">
            <span class="text-lg-start page-header"><strong>Adding new project</strong></span>
            <span class="text-muted"><strong>Here you can fill out information about the new project that you want to create</strong></span>
        </div>
        <h6 class="text-center mb-0" style="white-space: nowrap;">
            ProjectsLibrary &gt; Projects &gt; <span class="text-clr-info">Add project</span>
        </h6>
    </div>

    <div class="body-container rounded-3">
        <form asp-action="Add" asp-controller="Projects" method="post"
              class="w-100 bg-white p-4 shadow-sm rounded-top needs-validation" novalidate>
            <h2 class="mb-3"><strong>Project information</strong></h2>

            <div class="mb-3">
                <label asp-for="Project.Name" class="form-label form-title">Name</label>
                <input asp-for="Project.Name" class="form-control" placeholder="Enter project name..." />
                <span asp-validation-for="Project.Name" class="invalid-feedback d-block"></span>
            </div>

            <div class="d-flex justify-content-between gap-3">
                <div style="width: 45%;">
                    <label asp-for="Project.Priority" class="form-label form-title"></label>
                    <select asp-for="Project.Priority" class="form-select">
                        <option value="" disabled selected>Please select...</option>
                        @for (int num = 1; num <= 5; num++)
                        {
                            <option value="@num">@num</option>
                        }
                    </select>
                    <span asp-validation-for="Project.Priority" class="invalid-feedback d-block"></span>
                </div>

                <div class="mb-3" style="width: 45%;">
                    <label asp-for="Project.EndDate" class="form-label form-title">End date</label>
                    <input asp-for="Project.EndDate" class="form-control" type="date" />
                    <span asp-validation-for="Project.EndDate" class="invalid-feedback d-block"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Project.CompanyId" class="form-label form-title">Company</label>
                <select asp-for="Project.CompanyId" class="form-select">
                    <option value="" disabled selected>Please select...</option>
                    @foreach (var company in Model.Companies)
                    {
                        <option value="@company.Id">@company.Name</option>
                    }
                </select>
                <span asp-validation-for="Project.CompanyId" class="invalid-feedback d-block"></span>
            </div>

            @if (User?.Identity?.IsAuthenticated == true)
            {
                var id = User.FindFirst("employeeId")?.Value ?? "id";
                var name = User.FindFirst("employeeName")?.Value ?? "name";
                var roleString = User.FindFirst("employeeRole")?.Value ?? "role";
                var role = EmployeeRoleExtension.StringToRole(roleString);

                @if (role >= EmployeeRole.Supervisor)
                {
                    <div class="mb-3">
                        <label asp-for="Project.ProjectManagerId" class="form-label form-title">Project manager</label>
                        <select asp-for="Project.ProjectManagerId" class="form-select">
                            <option value="" disabled selected>Please select...</option>
                            @foreach (var employee in Model.Employees)
                            {
                                <option value="@employee.Id">@($"{employee.FirstName} {employee.LastName}")</option>
                            }
                        </select>
                        <span asp-validation-for="Project.ProjectManagerId" class="invalid-feedback d-block"></span>
                    </div>
                }
                else
                {
                    <div class="mb-3">
                        <label asp-for="Project.ProjectManagerId" class="form-label form-title">Project manager</label>
                        <select asp-for="Project.ProjectManagerId" class="form-select">
                            <option value=@(Convert.ToInt32(id)) selected>@name</option>
                        </select>
                        <span asp-validation-for="Project.ProjectManagerId" class="invalid-feedback d-block"></span>
                    </div>
                }
            }

            <div class="d-flex justify-content-end mt-3">
                <button type="reset" class="btn btn-danger mx-2">Reset</button>
                <button type="submit" class="btn btn-primary dt-btn-edit">Submit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_ValidStylesCommon" />
}