@model ProjectsLibrary.MVC.Models.Company.DetailsCompanyViewModel;
@{
    ViewData["Title"] = "Company details";
}

<div class="container col-12 py-1">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 header-container rounded-3">
        <div class="row">
            <span class="text-lg-start page-header"><strong>Details</strong></span>
            <span class="text-muted"><strong>Here you can update the company information and check its projects</strong></span>
        </div>
        <h6 class="text-center mb-0" style="white-space: nowrap;">
            ProjectsLibrary &gt; Companies &gt; <span class="text-clr-info">@Model.Company.Name</span>
        </h6>
    </div>

    <div class="body-container rounded-3 mb-4">
        <form asp-action="Details" asp-controller="Companies" method="post" asp-route-id="@Model.Id"
              class="w-100 bg-white p-4 shadow-sm rounded-top needs-validation" novalidate>
            <h2 class="mb-3"><strong>Company information</strong></h2>

            <div class="mb-3">
                <label asp-for="Company.Name" class="form-label form-title">Name</label>
                <input asp-for="Company.Name" class="form-control" placeholder="Enter company name..." value="@Model.Company.Name" />
                <span asp-validation-for="Company.Name" class="invalid-feedback d-block"></span>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <button type="reset" class="btn btn-danger mx-2">Reset</button>
                <button type="submit" class="btn btn-primary dt-btn-edit">Submit</button>
            </div>
        </form>
    </div>

    <div class="body-container rounded-3">
        <table id="projects-table" class="table table-bordered table-hover table-striped mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Project</th>
                    <th>Manager</th>
                    <th>Contacts</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Projects.Count == 0)
                {
                    <tr>
                        <td colspan="3">
                            <div class="d-flex justify-content-center align-items-center">
                                <p>At the moment there is no information about projects ordered by this company</p>
                            </div>
                        </td>
                    </tr>
                }
                @foreach (var project in Model.Projects)
                {
                    <tr>
                        <td>
                            <a href="@($"/Projects/Details/{project.Id}")" class='dt-a-link'>
                                @($"{project.Name}")
                            </a>
                        </td>
                        <td>
                            <a href="@($"/Employees/Details/{project.ProjectManagerId}")" class='dt-a-link'>
                                @($"{project.ProjectManager?.FirstName} {project.ProjectManager?.LastName}")
                            </a>
                        </td>
                        <td>
                            <p>@project.ProjectManager?.Email</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_ValidStylesCommon" />
}