@{
    ViewData["Title"] = "Home";
}

<body class="home">
    <!-- NAVBAR -->
    <nav class="home-navbar" aria-label="Main navigation">
        <div class="nav-left">
            <a href="#about-section" class="nav-link" aria-label="Learn more about us">
                About us
            </a>
        </div>
        <div class="nav-right">
            @if (User?.Identity?.IsAuthenticated == true)
            {
                <form asp-controller="Home" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" 
                            class="btn btn-light d-flex align-items-center justify-content-center gap-2"
                            aria-label="Sign out from your account">
                        Sign out
                        <img src="~/icons/signout.svg" alt="Sign out icon" />
                    </button>
                </form>
            }
            else
            {
                <a class="nav-link" 
                   asp-controller="Home" 
                   asp-action="Login"
                   aria-label="Sign in to your account">
                    Sign in
                </a>
                <a class="nav-btn" 
                   asp-controller="Home" 
                   asp-action="Registration"
                   aria-label="Create new account">
                    Sign up
                </a>
            }
        </div>
    </nav>

    <main id="bg-pictured" class="mt-0" role="main">
        <img class="bg-picture" 
             src="~/images/backgroundmain.jpg" 
             alt="Modern workspace background image"
             aria-hidden="true" />

        <div class="bg-content h-50 w-100 d-flex">
            <div class="glass h-100 px-4 py-5 mx-5 d-flex flex-column justify-content-between" 
                 style="width: 37%"
                 role="region"
                 aria-label="Welcome content">

                <!-- AUTHORIZED -->
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    var email = User.FindFirst("employeeEmail")?.Value ?? "email@email";
                    var name = User.FindFirst("employeeName")?.Value ?? "name";
                    var role = User.FindFirst("employeeRole")?.Value ?? "role";

                    <div class="text-content-container">
                        <h1 class="text-clr-sec mb-4" aria-label="Projects Library">
                            <strong>PROJECTS LIBRARY</strong>
                        </h1>
                        <h2 class="text-clr-sec h3" aria-live="polite">
                            Hello @name! You are authorized as @email - @role
                        </h2>
                    </div>
                    
                    <!-- ACTIONS SECTION -->
                    <div class="auth-actions" role="group" aria-label="Authorized user actions">
                        <form asp-controller="Home" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" 
                                    class="btn btn-light d-flex align-items-center justify-content-center gap-2" 
                                    style="width: 140px;"
                                    aria-label="Sign out from your account">
                                Sign out
                                <img src="~/icons/signout.svg" alt="Sign out icon" />
                            </button>
                        </form>
                        <a class="btn btn-primary dt-btn-edit d-flex align-items-center justify-content-center gap-2 mt-2" 
                           asp-controller="Tasks" 
                           asp-action="Index" 
                           style="width: 140px;"
                           role="button"
                           aria-label="Start working on tasks">
                            Let's start
                            <img src="~/icons/doublearrow.svg" alt="Start working icon" />
                        </a>
                    </div>
                }
                else
                {
                    <!-- UNATHORIZED -->
                    <div class="text-content-container">
                        <h1 class="text-clr-sec mb-4" aria-label="Projects Library">
                            <strong>PROJECTS LIBRARY</strong>
                        </h1>
                        <h2 class="text-clr-sec h3" style="text-align: justify;">
                            Discover new possibilities with Projects Library — get started today
                            and achieve faster, more efficient, and easier project management!
                        </h2>
                    </div>
                    
                    <!-- REGISTRATION SECTION -->
                    <div class="form-container pb-5" role="form" aria-label="Registration form">
                        <form asp-controller="Home" asp-action="Registration" method="get" novalidate>
                            <div class="sign-up-container mb-2" role="group" aria-labelledby="emailLabel">
                                <label for="emailRegistrationInput" class="visually-hidden" id="emailLabel">
                                    Enter your email address
                                </label>
                                <input name="email" 
                                       id="emailRegistrationInput" 
                                       type="email" 
                                       placeholder="Enter your email..." 
                                       aria-required="true"
                                       aria-describedby="emailHelp"
                                       required />
                                <button type="submit" 
                                        class="btn btn-primary dt-btn-edit"
                                        aria-label="Sign up with provided email">
                                    Sign up
                                </button>
                            </div>
                            
                            <!-- ADDITIONAL ACTIONS -->
                            <div class="form-buttons-container" role="group" aria-label="Additional actions">
                                <a href="#about-section" 
                                   class="btn btn-success"
                                   role="button"
                                   aria-label="Learn more about Projects Library">
                                    About us
                                </a>
                                <a class="btn btn-primary dt-btn-edit" 
                                   asp-controller="Home" 
                                   asp-action="Login"
                                   role="button"
                                   aria-label="Sign in to existing account">
                                    Sign in
                                </a>
                            </div>
                            <div id="emailHelp" class="visually-hidden">
                                Enter your email address to create a new account
                            </div>
                        </form>
                    </div>
                }
            </div>
        </div>
    </main>

    <!-- ABOUT SECTION (stub) -->
    <section id="about-section" class="visually-hidden">
    </section>

</body>